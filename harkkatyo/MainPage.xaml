<Page
    x:Class="harkkatyo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:harkkatyo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="800" Height="600">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas Height="600" 
                Width="800">
            <Image Source="Assets\valikko.png"/>
        </Canvas>

        <Button x:Name="PlayButton" Margin="438,271,0,267"  Click="PlayButton_Click" Height="62">
            <Image Source="Assets\pelaa.png" Width="200" Height="53"></Image>
        </Button>
        <Button x:Name="CreditsButton"  Click="CreditsButton_Click" Margin="438,398,0,138">
            <Image Source="Assets\tekijat.png"  HorizontalAlignment="Left" Width="200" Height="53"></Image>
        </Button>

        <Button x:Name="OhjeetButton" Click="OhjeetButton_Click" Margin="438,333,0,202">
            <Image Source="Assets\ohjeetnappi.png"  HorizontalAlignment="Left" Width="200" Height="53"></Image>
        </Button>


    </Grid>
</Page>
